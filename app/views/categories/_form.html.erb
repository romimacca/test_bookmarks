<%= form_with(model: category, local: true) do |form| %>
  <% if category.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h2>

      <ul>
      <% category.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

   <div class="field">
    <%= form.label :parent_id %>
     <%= form.select :category_id, Category.all.collect {|c| [c.name, c.id]}.unshift(["-- Optional --",nil]), {id: :category_id}, class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :private %>
    <%= form.check_box :private %>
  </div>

  <div class="actions">
    <%= form.submit 'Guardar Categoria', :class => 'btn btn-primary my-3' %>
  </div>
<% end %>
